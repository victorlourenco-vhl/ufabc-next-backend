{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "populate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "build:type-check": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "start": {
      "cache": true
    },
    "start:staging": {
      "cache": true
    },
    "start:watch": {
      "cache": true,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^test"],
      "cache": true
    }
  }
}
