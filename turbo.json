{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "populate": {
      "cache": false    
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:type-check": {
      "dependsOn": ["^build"]
    },
    "preview": {
      "cache": true
    },
    "start": {
      "cache": false,
      "persistent": true   
    },
    "lint": {},
    "test": {}
  }
}
