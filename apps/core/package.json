  "main": "dist/server.js",
  "scripts": {
    "populate": "node --env-file=.env --import=tsx cli/populate",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "rimraf dist && node --import=tsx esbuild.ts",
    "build:type-check": "tsc",
    "start": "node --env-file=.env.prod dist/server.js",
    "start:watch": "node --env-file=.env.production --watch dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/oauth2": "^7.7.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^1.10.2",
    "@next/common": "workspace:*",
    "@next/constants": "workspace:^",
    "@next/queue": "workspace:^",
    "close-with-grace": "^1.2.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.7",
    "ofetch": "^1.3.3",
    "remeda": "^1.33.0",
