{
  "name": "@next/core",
  "version": "1.0.0",
  "description": "Core logic of the backend",
  "type": "module",
  "keywords": [],
  "license": "ISC",
  "author": "Joabe Silva <joabevarjao123@gmail.com>",
  "main": "dist/server.js",
  "scripts": {
    "populate": "node --env-file=.env --import=tsx cli/populate",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "rimraf dist && node --import=tsx esbuild.ts",
    "build:type-check": "tsc",
    "start": "node --env-file=.env.production dist/server.js",
    "start:watch": "node --env-file=.env.production --watch dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.2",
    "@fastify/oauth2": "^7.5.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "@next/common": "workspace:*",
    "@next/constants": "workspace:^",
    "@next/models": "workspace:^",
    "close-with-grace": "^1.2.0",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "ofetch": "^1.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/tsconfig": "workspace:^",
    "@next/types": "workspace:^",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.8.7",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "esbuild": "^0.19.5",
    "esbuild-plugin-pino": "^2.0.2",
    "mongoose": "^8.0.0",
    "pino-pretty": "^10.2.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
