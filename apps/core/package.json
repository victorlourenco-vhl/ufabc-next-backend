    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "esbuild": "^0.19.10",
    "esbuild-plugin-pino": "^2.1.0",
    "pino-pretty": "^10.3.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^1.1.0"
